<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.work.model.CountrylanguageEntity" table="countrylanguage" schema="cities">
        <composite-id mapped="true" class="com.work.model.CountrylanguageEntityPK">
            <key-property name="countryCode">
                <column name="CountryCode" sql-type="char(3)" length="3"/>
            </key-property>
            <key-property name="language">
                <column name="Language" sql-type="char(30)" length="30"/>
            </key-property>
        </composite-id>
        <property name="percentage">
            <column name="Percentage" sql-type="float(4,1)" precision="4" scale="1"/>
        </property>
    </class>
</hibernate-mapping>